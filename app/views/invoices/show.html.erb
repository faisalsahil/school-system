
<html lang="en">
  <div class="bg-light lter b-b wrapper-md">
  <h1 class="m-n font-thin h3">Invoice </h1>
  </div>

    <link rel="stylesheet" href="style.css" media="all" />
    <div class="clearfix">
      <div id="logo">
        <%= image_tag asset_path("img/logo.png"), alt: ".", class: 'img-responsive'%>
      </div>
      <div id="company">
        <h2 class="name">Al Omam International school</h2>
          <div>Tal Al Asfar, Ar Rihab, Jeddah 23345, Saudi Arabia</div>
          <div>+966 12 674 1878</div>
          <div><a href="#">www.alomam.edu.sa/</a></div>
      </div>
    </div>
    <hr>
    <main>
      <div class="clearfix">
        <div id="client" >
          <h6><div class="to">INVOICE TO:</div></h6>
          <table class="table">
                <tbody>
                    
                    <tr>
                        <td class="student-profile-td">
                            Student Name
                        </td>
                        <td>
                        <%= @invoice.student.fullname %>
                        </td>
                    </tr>
                    <tr>
                        <td class="student-profile-td">
                            Grade
                        </td>
                        <td>
                        <%= @invoice.student.grade.name %>
                        </td>
                    </tr>
                    <tr>
                        <td class="student-profile-td">
                             Email
                        </td>
                        <td>
                        <%= @invoice.student.email %>
                        </td>
                    </tr>
                    <tr>
                        <td class="student-profile-td">
                            Address
                        </td>
                        <td>
                        <%= @invoice.student.address %>
                        </td>
                    </tr>
                     <tr>
                        <td class="student-profile-td">
                            Contact
                        </td>
                        <td>
                        <%= @invoice.student.phone %>
                        </td>
                    </tr>
                </tbody>
          </table>
        </div>
        <div id="invoice">
          <h6>Invoice  :: <%= @invoice.id %></h6>
          <div class="date">Date of Invoice: <%= @invoice.created_at.strftime("%m/%d/%Y")  %></div>
        </div>
      </div>
   
   <div class="clearfix">
    <div class="client margins">

      <table class="table">
        <thead >
          <tr>
            <th class="no">#</th>
            <th class="desc">Description</th>
            <th class="unit">Unit Price</th>
            <th class="qty">Qunatity</th>
            <th class="total">Total</th>
          </tr>
        </thead>


        <tbody>
         <% @invoice.lines.each do |pk| %>

          <tr>
            <td class="no"><%= pk.id %></td>
            <% if pk.item_id == nil %>
              <td class="desc"><%= pk.package.name %></td>
            <% else %>
              <td class="desc"><%= pk.item.name %></td>
            <% end %>
            <td class="unit"><%= pk.price %></td>
            <td class="qty"><%= pk.quantity %></td>
            <td class="total"><%= pk.price * pk.quantity %></td>
          </tr>
          
          
        </tbody>
        <%end%>
        
        <tfoot>
        
          <tr>
            <td colspan="3"></td>
            <td colspan="1">Subtotal</td>
            <% subtotal = @invoice.lines.sum('quantity * price') %>
            <td><%= subtotal %></td>
          </tr>
          <tr>
            <td colspan="3"></td>
            <td colspan="1">Discount</td>
            <td><%= @invoice.discount %> </td>
          </tr>
          <tr>
            <td colspan="3"></td>
            <td colspan="1">Grand Total</td>
            <td><%= subtotal-@invoice.discount %></td>
          </tr>
        </tfoot>
      </table>
    </div>
    </div>
     
    </main>
    <button class="btn btn-success pull-right" onclick="window.print()">Print</button>

</html>




