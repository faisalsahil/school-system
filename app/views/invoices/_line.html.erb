<% if @details %> 
 <div class = "row">
    <div class="column col-xs-12 col-sm-6  width: 100%;">
      <div class="field  styled-select "  >
    
        <%#= select_tag  ,options_for_select(@stops), {class: "form-control", style: 'width:30%;'} %>
        <div  class="form-group" name="invoice[line][item_id]">
          <div class=" form-group">
            <label>Item name</label>
            <input type="text" class="form-control" disabled="true" value="<%= @details.name %>">
          </div>
          <div class=" form-group">
            <label>Item price</label>
            <input type="text" class="form-control" disabled="true" value="<%= @details.price %>">
          </div>
          <div class=" form-group">
            <label>Total price</label>
            <input type="text" class="form-control" disabled="false" value="<%= @details.price %>">
          </div>

         


        </div>
      </div>
    </div>
  </div>

<% end %>
<style type="text/css">
  .styled-select select {
   background: white;
   width: 100%;
   
  border: 1;
   border-radius: 2px;
   border-color: #555;
   
   height: 34px;
   -webkit-appearance: none;
   }
</style>

