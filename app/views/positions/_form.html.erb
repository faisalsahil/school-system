<%= form_for(@position, class: 'form-inline') do |f| %>
  <% if @position.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@position.errors.count, "error") %> prohibited this position from being saved:</h2>

      <ul>
      <% @position.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, class: 'sr-only' %><br>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :category_id, class: 'sr-only' %><br>
    <%= f.select :category_id, options_from_collection_for_select(@categories,"id", "name"),{prompt: "Select Category"}, class: "form-control", required: true %>
  </div>
      
  <div class="form-group">
    <%= f.submit "Save", class: 'btn btn-success pull-right' %>
  </div>
<% end %>


