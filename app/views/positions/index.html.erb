<div class="bg-light lter b-b wrapper-md">
  <h1 class="m-n font-thin h3">Manage Positions 
  <%= link_to(new_position_path, class: "btn pull-right btn-color" ,style: "width:200px;") do %>
    <i class="fa fa-plus"></i>
    New Position
  <% end %>
  </h1>
</div>
<div class="wrapper-md">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Category</th>
        <th>Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @positions.each do |position| %>
        <tr>
          <td><%= position.name %></td>
          <td><%= position.try(:category).try(:name) %></td>
          <td><%= link_to '', position,:class =>  'btn btn-success  glyphicon glyphicon-ok-circle' %>
              <%= link_to '', edit_position_path(position),:class => ' btn btn-info  glyphicon glyphicon glyphicon-pencil bcc',style: "width:40px;" %>
              <%= link_to '', position, method: :delete, data: { confirm: 'Are you sure?' } ,:class =>  'btn btn-danger glyphicon glyphicon glyphicon-trash'%>
          </td> 
        </tr>
      <% end %>
    </tbody>
  </table>

</div>
