<div class="bg-light lter b-b wrapper-md">
  <h1 class="m-n font-thin h3">Exams List </h1>
</div>
<br>
<table class="table table-stripped">
  <thead class="table-head">
    <tr>
      <th>Name</th>
      <th>Batch</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @exams.each do |exam| %>
      <tr>
        <td><%= exam.name %></td>
        <td><%= exam.batch.name %></td>
        <td><%= link_to 'Show', exam %>
        <%= link_to 'Edit', edit_exam_path(exam) %>
        <%= link_to 'Destroy', exam, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Exam', new_exam_path %>
