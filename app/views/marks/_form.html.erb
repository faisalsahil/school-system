<%= form_for(@mark) do |f| %>
  <% if @mark.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@mark.errors.count, "error") %> prohibited this mark from being saved:</h2>

      <ul>
      <% @mark.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <label>Title</label>
    <%= f.text_field :name, class: "form-control" , style: "width:40%" %>
  </div>
  <div class="form-group">
    <label>Total Marks</label>
    <%= f.text_field :marks, class: "form-control" , style: "width:40%" %>
  </div>
  <div class="form-group">
    <label>Passing Marks</label>
    <%= f.text_field :passing_marks, class: "form-control" , style: "width:40%" %>
  </div>
  <div class="form-group">
    <label>Class</label>
    <%= f.collection_select :grade_id , Batch.last.grades.order(:name), :id , :name,{},{:style => 'height:34px;width: 40%',  class: 'form-control'} %>
  </div>
  <div class="actions">
    <%= f.submit class: "btn btn-success" %>
  </div>
<% end %>
