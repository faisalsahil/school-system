
<h1>Listing Marks</h1>

<table class="table">
  <thead class="table-head">
    <tr>
      <th>Name</th>
      <th>Marks</th>
      <th>Passing marks</th>
      <th>Grade</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @marks.each do |mark| %>
      <tr>
        <td><%= mark.name %></td>
        <td><%= mark.marks %></td>
        <td><%= mark.passing_marks %></td>
        <td><%= mark.grade_id %></td>
        <td><%= link_to 'Show', mark %></td>
        <td><%= link_to 'Edit', edit_mark_path(mark) %></td>
        <td><%= link_to 'Destroy', mark, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Mark', new_mark_path %>
