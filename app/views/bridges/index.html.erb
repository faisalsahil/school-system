<p id="notice"><%= notice %></p>


<table class="table">
  <thead class="table-head">
    <tr>
      <th>Subject</th>
      <th>Grade</th>
      <th>Employee</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bridges.each do |bridge| %>
      <tr>
        <td><%= bridge.subject_id %></td>
        <td><%= bridge.grade_id %></td>
        <td><%= bridge.employee_id %></td>
        <td><%= link_to 'Show', bridge %></td>
        <td><%= link_to 'Edit', edit_bridge_path(bridge) %></td>
        <td><%= link_to 'Delete', bridge, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

