  <div class="container form-holder">
    <div class="row">
    <%= form_for @parent do |f| %>
      <% if @parent.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@parent.errors.count, "error") %> prohibited this parent from being saved:</h2>

          <ul>
          <% @parent.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>


      <div class="row">
        <div class= "admission-form-heading" ><h4 style="color:white;"> Personal Information </h4> </div>
        <br>
        <br>
        <div class="column col-xs-12 col-md-4">
          <div class="form-group">
            <label for="exampleInputEmail1">Name</label>
            <%= f.text_field :name , :style => 'height:34px;',  class: 'form-control', required: true, autofocus: true %>
          </div>
        </div>
        <%= hidden_field_tag "student_id",  @student.id %>
        <div class="column col-xs-12 col-md-4">
          <div class="form-group">
            <label for="exampleInputEmail1">Relation</label>
            <%= f.select :relation, options_for_select(%w[Father Mother Guardian]),{}, {class: "form-control", style: ''} %>
          </div>
        </div>

        <div class="column col-xs-12 col-md-4">
          <div class="form-group">
            <label for="exampleInputEmail1">Qualification</label>
            <%= f.text_field :education , :style => 'height:34px;',  class: 'form-control', required: true, autofocus: true %>
          </div>
        </div>

        <div class="column col-xs-12 col-md-4">
          <div class="form-group">
            <label for="exampleInputEmail1">Profession</label>
            <%= f.text_field :profession , :style => 'height:34px;',  class: 'form-control', required: true, autofocus: true %>
          </div>
        </div>

        <div class="column col-xs-12 col-md-4">
          <div class="form-group">
            <label for="exampleInputEmail1">Date of Birth</label>
            <%= f.text_field :dob , :style => 'height:34px;',  class: 'form-control', required: true, autofocus: true %>
          </div>
        </div>

        <div class="column col-xs-12 col-md-4">
          <div class="form-group">
            <label for="exampleInputEmail1">Income</label>
            <%= f.text_field :income , :style => 'height:34px;',  class: 'form-control', required: true, autofocus: true %>
          </div>
        </div>

        <div class="column col-xs-12 col-md-4">
          <div class="form-group">
            <label for="exampleInputEmail1">Iqama Number</label>
            <%= f.text_field :iqamaNumber , :style => 'height:34px;',  class: 'form-control', required: true, autofocus: true %>
          </div>
        </div>

        <div class="column col-xs-12 col-md-4">
          <div class="form-group">
            <label for="exampleInputEmail1">Iqama Expiry</label>
            <%= f.text_field :iqamaExpiry , :style => 'height:34px;',  class: 'form-control', required: true, autofocus: true %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class= "admission-form-heading" ><h4 style="color:white;"> Contact Information </h4> </div>
        <br>
        <br>
        <div class="column col-xs-12 col-md-4">
          <div class="form-group">
            <label for="exampleInputEmail1">Address 1</label>
            <%= f.text_field :address1 , :style => 'height:34px;',  class: 'form-control', required: true, autofocus: true %>
          </div>
        </div>
        <div class="column col-xs-12 col-md-4">
          <div class="form-group">
            <label for="exampleInputEmail1">Address 2</label>
            <%= f.text_field :address2, :style => 'height:34px;',  class: 'form-control', required: true, autofocus: true%>
          </div>
        </div>

        <div class="column col-xs-12 col-md-4">
          <div class="form-group">
            <label for="exampleInputEmail1">City</label>
            <%= f.text_field :city , :style => 'height:34px;',  class: 'form-control', required: true, autofocus: true %>
          </div>
        </div>

        <div class="column col-xs-12 col-md-4">
          <div class="form-group">
            <label for="exampleInputEmail1">Country</label>
            <%= f.text_field :country , :style => 'height:34px;',  class: 'form-control', required: true, autofocus: true %>
          </div>
        </div>

        <div class="column col-xs-12 col-md-4">
          <div class="form-group">
            <label for="exampleInputEmail1">Office Phone</label>
            <%= f.text_field :officePhone , :style => 'height:34px;',  class: 'form-control', required: true, autofocus: true %>
          </div>
        </div>

        <div class="column col-xs-12 col-md-4">
          <div class="form-group">
            <label for="exampleInputEmail1">Mobile</label>
            <%= f.text_field :mobile , :style => 'height:34px;',  class: 'form-control', required: true, autofocus: true %>
          </div>
        </div>

        <div class="column col-xs-12 col-md-4">
          <div class="form-group">
            <label for="exampleInputEmail1">E-mail Address</label>
            <%= f.text_field :email , :style => 'height:34px;',  class: 'form-control', required: true, autofocus: true %>
          </div>
        </div>
      </div>
      <% if @flag %>
        <div class="form-group">
          <%= f.submit "Next", :class => 'btn btn-block btn-success form-control',:style=>'width:24%;float: right; margin-right:35px;' %>
        </div>
      <% end %>
    </div>
    
  </div>

  <%end%>
