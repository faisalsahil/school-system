$(document).ready(function(){
  $("#item_shopcategory_id").change(function(e){
    var v = $('#item_shopcategory_id').val(); 
    console.log(v);
  if(v == "1" )
  {
    $('#sizediv').removeClass('displayn');
  }
  else{
  console.log();
    $('#sizediv').addClass('displayn');
  }
  });
});
</script>

