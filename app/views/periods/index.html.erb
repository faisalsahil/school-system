<p id="notice"><%= notice %></p>

<h1>Listing Periods</h1>

<table>
  <thead>
    <tr>
      <th>Time table</th>
      <th>Period num</th>
      <th>Subject</th>
      <th>Day</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @periods.each do |period| %>
      <tr>
        <td><%= period.time_table_id %></td>
        <td><%= period.period_num %></td>
        <td><%= period.subject_id %></td>
        <td><%= period.day %></td>
        <td><%= link_to 'Show', period %></td>
        <td><%= link_to 'Edit', edit_period_path(period) %></td>
        <td><%= link_to 'Destroy', period, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

