<% if @routes %> 
 <div class = "row">
    <div class="column col-xs-12 col-sm-6  width: 100%;">
      <div class="field  styled-select "  >
    
        <%#= select_tag  ,options_for_select(@stops), {class: "form-control", style: 'width:30%;'} %>
        <div name="transportfeerecord[route_id]" class="form-group">
          <div class=" form-group">
            <label>Route Name</label>
            <input type="text" class="form-control" disabled="true" value="<%= @routes.route.name %>">
          </div>

          <div class=" form-group">
            <label>Stop</label>
            <input type="text" class="form-control" disabled="true" value="<%= @routes.stop.name %>">
          </div>

          <div class=" form-group">
            <label>Driver</label>
            <input type="text" class="form-control" disabled="true" value="<%= @routes.transport.employee.full_name %>">
          </div>
          <%= hidden_field_tag :fee, @routes.fee %>


          <div class=" form-group">
            <label>Fee</label>
            <input type="text" class="form-control" disabled="true" value="<%= @routes.fee %>">
          </div>
          <%= hidden_field_tag :bus_allotment_id, @routes.id %>

          <div class=" form-group">
            <label>Vehicle Number</label>
            <input type="text" class="form-control" disabled="true" value="<%= @routes.transport.vehicle.vehicle_no %>">
          </div>


        </div>
      </div>
    </div>
  </div>

<% end %>
<style type="text/css">
  .styled-select select {
   background: white;
   width: 100%;
   
 	border: 1;
   border-radius: 2px;
   border-color: #555;
   
   height: 34px;
   -webkit-appearance: none;
   }
</style>

