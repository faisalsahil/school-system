<div class="bg-light lter b-b wrapper-md">
  <h1 class="m-n font-thin h3"> Fee Register </h1>
</div>
<br>
<table class="table">
  <thead class= "table-head">
    <th>Student ID</th>
    <th>Student Name</th>
    <th>Amount</th>
    <th>User</th>
    <th>Month</th>
    <th>Action</th>
  </thead>
  <tbody>
    <% @fees.each do |fee| %>
      <tr>
        <td><%= fee.student_id %></td>
        <td><%= Student.find(fee.student_id).fullname %></td>
        <td><%= fee.amount %></td>
        <td><%= fee.user_id %></td>
        <td><%= fee.month %></td>

        <td> <%= link_to '', fee,:class =>  'btn btn-success  glyphicon glyphicon-ok-circle' %>
        <% if current_user.role != 'student' %>
              <%= link_to '', edit_fee_path(fee),:class => ' btn btn-info  glyphicon glyphicon glyphicon-pencil bcc',style: "width:40px;" %>
              <%= link_to '', fee, method: :delete, data: { confirm: 'Are you sure?' } ,:class =>  'btn btn-danger glyphicon glyphicon glyphicon-trash'%>
          </td> 
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>